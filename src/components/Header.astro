<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #121212;
		/* box-shadow: 0 2px 8px rgba(var(--black), 100%); */
	}
	h2 {
		color: #bb86fc;
		margin: 10;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 3.0em;
		color: var(--black);
		border-bottom: 2px solid #e0e0e0;
		text-decoration: none;
		justify-content: space-between;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: var(--pale_purple);
	}
	.social-links,
	.social-links a {
		display: flex;
		width: 500px;
		justify-content: space-between;
	}

	.title,
	.title a{
		width: 500px;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
